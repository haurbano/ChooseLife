<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    android:layout_margin="@dimen/margin_medium"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/ly_localizacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_small"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_location_on_black_24dp"
                android:layout_marginRight="@dimen/margin_small"
                />
            <TextView
                android:id="@+id/txt_localizacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calle 14 # 56-56"
                android:textSize="16sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_dia"
            android:layout_below="@id/ly_localizacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_small"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_today_black_24dp"
                android:layout_marginRight="@dimen/margin_small"
                />

            <TextView
                android:id="@+id/txt_dia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 Noviembre 2015"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_hora"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ly_dia"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_small">

            <ImageView
                android:id="@+id/img_logo_hora"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_access_time_black_24dp"
                android:layout_marginRight="@dimen/margin_small"
                />

            <TextView
                android:id="@+id/txt_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_dia"
                android:layout_toRightOf="@id/img_logo_hora"
                android:text="3:00 am"
                android:textSize="16sp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_carro"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/ly_hora">
            <ImageView
                android:id="@+id/img_logo_carro"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_drive_eta_black_24dp"
                android:layout_marginRight="@dimen/margin_small"
                />

            <TextView
                android:id="@+id/txt_carro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Renault 4"
                android:textSize="16sp"/>


        </LinearLayout>

        <Button
            app:theme="@style/ButtonAccent"
            android:id="@+id/btn_cancelar_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ly_carro"
            android:text="Cancelar"
            android:drawableLeft="@drawable/ic_cancel_24"
            android:drawablePadding="@dimen/margin_medium"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>

